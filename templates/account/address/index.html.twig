{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1>Espace membre</h1>

        <div class="row">
            <div class="col-md-3">
                    {% include 'account/menu.html.twig' %}
            </div>
        
            <div class="col-md-9">
                <div class="d-flex justify-content-between">
                    <h5> mes adresses</h5>
                    <a href="{{ path('app_account_address_form')}}" class="btn btn-light">Ajouter une adresse</a>
                </div>
                {% if app.User.addresses|length == 0 %}
                <p> vous n'avez pas encore enregistrÃ© votre adresse </p>
                {% else %}
                    <div class="row">
                        {% for address in app.User.addresses %}
                            <div class="col-md-3 mt-2">
                            <div class="bg-light p-2 text-center">
                                <strong>{{ address.firstName }} {{ address.lastName}} </strong><br/>
                                {{ address.address }} <br/>
                                {{ address.postal }}, {{ address.city }} <br/>
                                {{ address.country }}
                                <div class="mt-3">
                                    <a href="{{ path('app_account_address_form', { id : address.id}) }}" class="btn btn-secondary">modifier adresse</a>
                                </div>
                                <div class="mt-3">
                                    <a href="{{ path('app_account_address_form_delete', { id : address.id}) }}" class="btn btn-danger">supprimer</a>
                                </div>
                            </div>
                            </div>
                        {% endfor %} 
                    </div>
                {% endif %}
            </div>
        </div>
        
    </div>

{% endblock %}
